@model List<Lyd.MoopDemo.PmsCore.Guest>
@{
    ViewData["Title"] = "Quản lý hồ sơ khách";
}



<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <p class="bg-primary">@TempData["Message"]</p>
    </div>
    <div class="col-md-12">
       
        <form class="form-inline" method="get" action="@Url.Action("Search")">
            <fieldset>
                <legend>Tìm kiếm</legend>
                <label>Tên</label>
                <input class="form-control" type="text" required name="name" value="@ViewBag.SearchName" />
                <input type="submit" class="btn btn-primary" value="Tìm kiếm" />
            </fieldset>

        </form>
       
        <form class="form-inline" method="post" action="@Url.Action("CreateGuest")">
            <fieldset>
                <legend>Thêm</legend>
                <label>Tên</label>
                <input class="form-control" type="text" required name="name" value="" />
                <label>Địa chỉ</label>
                <input class="form-control" type="text" required name="address" value="" />
                <label>Phone</label>
                <input class="form-control" type="text" required name="phone" value="" />
                <label>Giới tính</label>
                <select class="form-control" name="gender">
                    <option value="0">Nam</option>
                    <option value="1">Nu</option>
                </select>
                <input type="submit" class="btn btn-primary" value="Lưu" />
            </fieldset>


        </form>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Mã khách</th>
                    <th>Tên khách</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count == 0)
                {
                    <tr>
                        <td colspan="2">Không có kết quả</td>
                    </tr>

                }
                else
                {
                    foreach (var guest in Model)
                    { 
                        <tr>
                            <td>@guest.GuestCode</td>
                            <td>@guest.GuestName</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
